<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.mamobet.game.mapper.BetOrderMapper">

    <!-- 自定义根据用户ID查注单 -->
    <select id="selectByUserId" parameterType="long" resultType="cn.mamobet.game.entity.BetOrder">
        SELECT *
        FROM bet_order
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

</mapper>
